<% include partials/menu.ejs %>

<div id="signup">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<form action="/users/signup" method="POST" role="form">
					<legend class="text-center lead">Sign up for free</legend>
				
					<div class="form-group">
						<label for="">Email: <i style="color: red">*</i></label>
						<input type="email" class="form-control" name="email" id="" placeholder="Email here..." required="">
					</div>
					<div class="form-group">
						<label for="">Username: <i style="color: red">*</i></label>
						<input type="text" class="form-control" name="username" id="" placeholder="Username here..." required="">
					</div>
					<div class="form-group">
						<label for="">Password: <i style="color: red">*</i></label>
						<input type="password" class="form-control" name="password" id="" placeholder="Password here..." required="">
					</div>
					<div class="form-group">
						<label for="">Confirm password: <i style="color: red">*</i></label>
						<input type="password" class="form-control" name="confirmpassword" id="" placeholder="Confirm password here..." required="">
					</div>
				
					<div class="row">
						<div class="col-sm-6">
							<button type="submit" class="btn btn-primary btn-block">Sign up</button>
						</div>
						<div class="col-sm-6">
							<button type="reset" class="btn btn-primary btn-block">Reset form</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

