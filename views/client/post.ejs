	<div class="container">
		<div class="row">
			<div class="col-sm-8">
				<div class="well">
					<h1 style="margin-top: 0px"><%= post.title %></h1>
					<br>
					<p><i class="glyphicon glyphicon-time"></i>&nbsp;<%= moment(post.date).format('hh:mm:ss DD/MM/YYYY') %></p>
					<br>
					<img class="img-responsive" src="/uploads/<%= post.image %>" style="width: 100%;height: auto"></img>
					<br>
					<p><%= post.content %></p>
				</div>
