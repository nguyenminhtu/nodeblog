			</div>
			<div class="col-sm-4">
				<div class="well">
					<b>Relate Posts</b>
				</div>
				<div class="well">
					<% relatePosts.forEach(function(pos) { %>
						<div class="item-relate">
							<div class="row">
								<div class="col-sm-4">
									<a href="/posts/<%= pos._id %>/show"><img src="/uploads/<%= pos.image %>" alt="" class="img-responsive"></a>
								</div>
								<div class="col-sm-8">
									<p class="lead"><a href="/posts/<%= pos._id %>/show"><%= pos.title %></a></p>
									<p><%= moment(pos.date).format('hh:mm:ss DD/MM/YYYY') %></p>
								</div>
							</div>
						</div>
					<% }); %>
				</div>
			</div>
		</div>
	</div>
